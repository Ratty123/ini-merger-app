  "version": "1.0.0",
  "description": "A tool for merging engine.ini files",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win portable"
  },
  "build": {
    "appId": "com.ini.merger",
